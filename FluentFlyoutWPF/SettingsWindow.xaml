<controls:MicaWindow x:Class="FluentFlyout.SettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FluentFlyout"
      xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
      mc:Ignorable="d" 
      Height="230" Width="400" Background="Black" MinHeight="230" MinWidth="400"
      Title="Settings" Icon="/FluentFlyout.ico"
      TextOptions.TextRenderingMode="ClearType" TextOptions.TextFormattingMode="Ideal"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="12,12,12,12" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Resources/FluentFlyout.ico" Width="48" Height="48"/>
                <TextBlock Text="FluentFlyout Settings" FontSize="24" FontWeight="Medium" Foreground="White" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,12,0,0">
                <TextBlock Text="Compact Layout" FontSize="14" FontWeight="Regular" Foreground="LightGray"/>
                <controls:ToggleSwitch Name="ThemeComboBox" Width="150" Margin="12,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,12,0,0">
                <TextBlock Text="Position" FontSize="14" FontWeight="Regular" Foreground="LightGray" VerticalAlignment="Center"/>
                <ComboBox Name="PositionComboBox" Width="150" Margin="12,0,0,0">
                    <ComboBoxItem Content="Bottom Left"/>
                    <ComboBoxItem Content="Bottom Center"/>
                    <ComboBoxItem Content="Bottom Right"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,12,0,0">
                <controls:Button Name="SaveButton" Style="{StaticResource MicaWPF.Styles.AccentedButton}" Content="Save &#38; Close" Width="100" Height="32" Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</controls:MicaWindow>
